{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "components": ["components"],
      "data": ["data"],
      "schemas": ["schemas"],
      "helpers": ["helpers"],
      "types": ["types"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/__tests__/routines.test.ts",
    "services/excelFile.js"
  ],
  "exclude": ["node_modules"]
}
